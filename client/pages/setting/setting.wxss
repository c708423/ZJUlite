/* pages/setting/setting.wxss */
.container{
  padding-left: 23rpx;
  padding-right: 23rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-family: PingFangSC-Light, sans-serif;
}
.backgroundcolor{
    background: linear-gradient(180deg, #00CDAC , #8DDAD5);
    height:280rpx;
    position: fixed;
    top:0rpx;
    left:0rpx;
    right:0rpx;
    z-index:-999;
}
.photo{
  height:120rpx;
  width:120rpx;
  border-radius: 50%;
  overflow: hidden
}
.photo image{
  width: 100%;
  height: 100%;
}
.name{
  font-size: 30rpx;
  color: #000;
  margin-top:20rpx;
}
.box{
  width: 90%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  background: #fff;
  border-radius: 20rpx;
  font-size: 35rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #000;
  margin-top: 20rpx;
  box-shadow: 0rpx 0rpx 1rpx 1rpx rgba(0,0,1,0.09); 
}