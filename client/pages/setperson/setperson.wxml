<!--pages/setperson/setperson.wxml-->
<view class='container'> 
  <view class='photobox'>
    <view class='photo'>
      <image src="{{userinfo.avatarUrl}}"></image>
    </view>
    <view class='uploader-container'>
        <view class="weui-uploader__bd">
          <view class="weui-uploader__files" id="uploaderFiles">
            <block wx:for="{{files}}" wx:key="*this">
              <block wx:if="{{item.state == 2}}">
                <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                  <image class="weui-uploader__img" src="{{item.url}}" mode="aspectFill" />
                </view>
              </block>
              <block wx:if="{{item.state == 1}}">
                <view class="weui-uploader__file weui-uploader__file_status">
                  <image class="weui-uploader__img" src="" mode="aspectFill" />
                  <view class="weui-uploader__file-content">{{item.progress}}%</view>
                </view>
              </block>
            </block>

          </view>
          <view class="weui-uploader__input-box {{files.length<1?'':'viewhidden'}}">
            <view class="weui-uploader__input" bindtap="chooseImage"></view>
          </view>
        </view>
      </view>
  </view>
  <view class='nickbox'>
    <view>键入昵称：</view>
    <input type='text' confirm-type='done' placeholder='fill' bindinput='inputchange' value='{{nickname}}'></input>
  </view> 
  <button type='primary' size='mini' class='submitbutton' bindtap='submit'>确定修改</button>
</view>