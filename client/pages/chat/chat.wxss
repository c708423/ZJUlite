/* pages/chat/chat.wxss */
.backgroundcolor{
    background: linear-gradient(180deg, #8DDAD5 , #00CDAC);
    height:220rpx;
    width:750rpx;
    position: fixed;
    top:0rpx;
    left:0rpx;
    z-index:100;
}

.user-head {
  height:282rpx;
  width:182rpx;
  align-items: center;
  margin:20rpx auto;
  text-align: center;
}
.nickname{
  display:inline-block;
  font-size:10pt;
}
.headimg-wrap{
  height:120rpx;
  width:120rpx;
  border-radius: 50%;
  background-color:#DFDFDF;
  margin:0 auto;
  overflow:hidden;
}
.headimg-wrap image{
  width:100%;
  height:100%;
}
.rightmsg{
  display:flex;
  justify-content:flex-end;
  width:100%;
  padding-bottom:28rpx;
}
.rightmsg view{
  max-width: 626rpx;
  right:0rpx;
  background-color:white;
  padding:28rpx 34rpx 28rpx 34rpx;
  box-shadow:0rpx 0rpx 65rpx 0rpx rgba(230,230,230,0.2);
    border-radius: 10rpx;
}
.leftmsg{
  display:flex;
  width:100%;
  padding-bottom:28rpx;
}
.leftmsg view{
  max-width: 626rpx;
  right:0rpx;
  background-color:#00C8A8;
  color:white;
  padding:28rpx 34rpx 28rpx 34rpx;
  box-shadow:0rpx 0rpx 65rpx 0rpx rgba(230,230,230,0.2);
  border-radius: 10rpx;
}
.chatcontent{
  margin-top:220rpx;
  position:relative;
  padding-left:22rpx;
  padding-right:22rpx;
}
.graytime{
  text-align:center;
font-size:10pt;
margin-bottom:10rpx;
padding-top:15rpx;
color:#D1D4D8;
}