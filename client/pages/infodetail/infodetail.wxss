/* pages/infodetail/infodetail.wxss */
page{
  background-color: #ecf0f1!important;
}
.displaynone{
  display: none;
}
.home-container{
    padding-top:0rpx;
    padding-bottom:0rpx;
    padding-left:25.93rpx;
    padding-right:25.93rpx;
  font-family: PingFangSC-Light, sans-serif;
}
.backgroundcolor{
    background-image: linear-gradient(0deg, #CBBACC 0%, #2580B3 100%);
    height:150rpx;
    position: absolute;
    top:0rpx;
    left:0rpx;
    right:0rpx;
    z-index:-1;
}
.userfilebox
{
  margin-top: 15rpx;
  height: 170rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 1rpx 1rpx rgba(0,0,1,0.09);
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  padding-left: 50rpx;
}
.imgwrap{
  height:80rpx;
  width:80rpx;
  border-radius: 50%;
  background-color:#DFDFDF;
  overflow:hidden;
  margin-right: 30rpx;
}
.imgwrap image{
  width: 100%;
  height: 100%;
}
.textwrap{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}
.textwrap .nickname{
  font-size: 35rpx;
  letter-spacing: 1rpx;
  color: #4A4A4A;
}
.textwrap .logintime{
  font-size:25rpx;
  color: #DFDFDF;
}
.card-title {
  margin-top: 30rpx;
  margin-left: 50rpx;
  width: 300rpx;
  height: 80rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
}
.titletext{
  margin-left: 40rpx;
  letter-spacing: 2rpx;
  font-size : 40rpx;
  font-weight: bold;
  color: #000;
}
.titleleftborder{
  height: 60rpx;
  width: 15rpx;
  align-self: center;
}
.detail{
  width:90%;
  padding-right: 50rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.detail .text{
  color: #1C1C1C;
  font-size: 35rpx; 
}
.tags{
  margin-top: 50rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.tags .icon{
  width: 50rpx;
  height: 50rpx;
}
.tags .icon image{
  width: 100%;
  height: 100%;
}
.tags .text{
  font-size: 26rpx;
  color: #2c2c2c;
}
.hr{
  background: #dfe6e9;
  height: 1rpx;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30rpx;
}